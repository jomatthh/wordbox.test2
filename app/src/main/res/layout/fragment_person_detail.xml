<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/personItemF_iv_icon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personItemF_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/personItemF_iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personItemF_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/personItemF_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/personItemF_tv_name" />
    <TextView
        android:id="@+id/personItemF_tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/personItemF_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/personItemF_tv_email"/>

    <TextView
        android:id="@+id/personItemF_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/personItemF_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/personItemF_tv_gender"/>

    <TextView
        android:id="@+id/personItemF_tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/personItemF_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/personItemF_tv_age"/>

</androidx.constraintlayout.widget.ConstraintLayout>